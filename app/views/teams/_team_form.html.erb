<div class="grey_block">
<% form_for @team do |f| %>
	<%= f.error_messages %>
<ul>
	<li>	
		<%= f.label :name, 'Name (*)', :class=>'label' %>
		<%= f.text_field :name, :class=>'input' %>
	</li>
	<li>
		<%= f.label :team_manager_id, 'Manager (*)', :class=>'label' %>
		<%= f.select :team_manager_id, @global_holders.map{ |h| [h.name, h.id] } ,{:include_blank=>'- Select a manager -'}, :class=>'input' %>
	</li>
	<li>
		<%= f.submit submit %>
		<%= link_to 'Cancel', (session[:return_to] || root_url) %>
	</li>
</ul>
<% end %>
</div>