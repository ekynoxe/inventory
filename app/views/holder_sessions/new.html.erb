<h1>Login</h1>
<% flash.each do |key, msg| %>
   <%= content_tag :div, msg, :class => [key, " message"], :id => "notice_ #{key}" %>
   <% content_tag :script, :type => "text/javascript" do -%>
       setTimeout("new Effect.Fade('notice_<%= key %>');", 3000);
   <% end %>
<% end %>

<% form_for @holder_session do |f| %>
	<%= f.error_messages %>
<ul>
	<li>	
		<%= f.label :email, 'Email', :class=>'label' %>
		<%= f.text_field :email, :class=>'input' %>
	</li>
	<li>
		<%= f.label :password, 'password', :class=>'label' %>
		<%= f.password_field :password, :class=>'input' %>
	</li>
	<li>
		<%= f.submit 'Login' %>
	</li>
	<li>
		<%= link_to '<span class="small">I forgot my password</span>', new_password_reset_url %>
	</li>
</ul>
<% end %>